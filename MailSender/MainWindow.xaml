<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"/>
                <MenuItem Header="Открыть"/>
                <MenuItem Header="Закрыть"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <TabControl Background="LightGray">
            <TabItem Header="Вкладка 1" IsEnabled="True">
                <StackPanel Margin="5">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="Ваш Email: "/>
                        <TextBox x:Name="email" Width="250" Text="berlin.22014@yandex.ru"/>
                        <TextBlock Text="       Пароль: "/>
                        <PasswordBox x:Name="psw" Width="250"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Кому: "/>
                        <TextBox x:Name="to" Width="250" Text="3841832@gmail.com,hamipecixa@shayzam.net"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Тема: "/>
                        <TextBox x:Name="subject" Text="Тема" Width="250"/>
                    </StackPanel>
                    <TextBlock Text="Сообщение: "  Margin="0,5,0,0"/>
                    <TextBox x:Name="message" Height="200" HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch" TextWrapping="Wrap" Text="Текст"/>
                    <Button Content="Отправить" Click="Button_Click" Margin="0,5,0,0"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Вкладка 2"/>
            <TabItem Header="Вкладка 3"/>
            <TabItem Header="Вкладка 4"/>
        </TabControl>
    </DockPanel>
</Window>
