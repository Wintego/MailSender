<Window x:Class="MailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None" Width="350" Height="250">
    <Border BorderBrush="LightYellow" BorderThickness="3px">
        <Grid Margin="30">
            <TextBlock x:Name="label" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBlock>
            <Button Content="OK" Width="100" Height="23" VerticalAlignment="Bottom" Click="Button_Click"></Button>
        </Grid>
    </Border>    
</Window>
